<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
    version="2.1">
    
    
	  <!-- Regras de navegação para a página de Pessoa -->
	<navigation-rule>
		 <navigation-case>
			  <from-outcome>sucesso</from-outcome>
			  <to-view-id>/xhtml/sucesso.xhtml</to-view-id>
		 </navigation-case>
		 <navigation-case>
			  <from-outcome>falha</from-outcome>
			  <to-view-id>/xhtml/falha.xhtml</to-view-id>
		 </navigation-case>
		 <navigation-case>
			  <from-outcome>listar</from-outcome>
			  <to-view-id>/xhtml/vwListarProduto.xhtml</to-view-id>
		 </navigation-case>
		 <navigation-case>
			  <from-outcome>listar curso</from-outcome>
			  <to-view-id>/xhtml/vwListarCurso.xhtml</to-view-id>
		 </navigation-case>
		 <navigation-case>
			  <from-outcome>editar</from-outcome>
			  <to-view-id>/xhtml/vwEditarProduto.xhtml</to-view-id>
		 </navigation-case>
		 <navigation-case>
			  <from-outcome>editar curso</from-outcome>
			  <to-view-id>/xhtml/vwEditarCurso.xhtml</to-view-id>
		 </navigation-case>
		 <navigation-case>
			  <from-outcome>criar</from-outcome>
			  <to-view-id>/xhtml/vwCriarProduto.xhtml</to-view-id>
		 </navigation-case>
		 <navigation-case>
			  <from-outcome>criar curso</from-outcome>
			  <to-view-id>/xhtml/vwCriarCurso.xhtml</to-view-id>
		 </navigation-case>
		 <navigation-case>
			  <from-outcome>principal</from-outcome>
			  <to-view-id>/xhtml/vwPrincipal.xhtml</to-view-id>
		 </navigation-case>
 	</navigation-rule> 
    
    <!-- JSF and Spring are integrated -->
    <application>
        <el-resolver>
            org.springframework.web.jsf.el.SpringBeanFacesELResolver
        </el-resolver>
    </application>

</faces-config>
